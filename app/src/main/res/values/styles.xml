<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#075e54</item>
        <!--        upper one is for tabbs -->
        <item name="colorPrimaryDark">#075e54</item>
        <!--ye sabse upper waala battery waala colour hai -->
        <item name="colorAccent">#075e54</item>

        <!-- ye waala hai titile bar -->
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="title">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #040000
        </item>

    </style>


    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

</resources>
